---
import Layout from '../layouts/Layout.astro';
import Dashboard from '../components/Dashboard';
import ThemeToggle from '../components/ThemeToggle';
---

<Layout title="Fraud Detection Analytics">
  <div class="container mx-auto p-4 sm:p-6 max-w-7xl">
    <header class="mb-6 sm:mb-8 flex items-start justify-between gap-4">
      <div>
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary">Fraud Detection Analytics</h1>
        <p class="text-sm sm:text-base text-muted-foreground mt-2">Real-time monitoring and insights</p>
      </div>
      <ThemeToggle client:load />
    </header>

    <Dashboard client:load />
  </div>
</Layout>
