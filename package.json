{
  "name": "markov-mail",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "cli": "bun run cli/index.ts",
    "build": "npm run build:dashboard",
    "build:dashboard": "cd dashboard && npm run build",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run typecheck && npm run build && wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "tree:train": "bun run cli/index.ts tree:train",
    "test": "vitest",
    "test:unit": "vitest tests/ --exclude tests/e2e/** --exclude tests/performance/**",
    "test:e2e": "vitest tests/e2e/",
    "test:performance": "vitest tests/performance/",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.3",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/bun": "^1.3.1",
    "typescript": "^5.5.2",
    "vitest": "^3.2.0",
    "wrangler": "^4.45.3"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "hono": "^4.10.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  }
}
